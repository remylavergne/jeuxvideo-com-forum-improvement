{
    "manifest_version": 2,
    "name": "jv-com-chrome-extension",
    "version": "0.0.1",
    "description": "Extension pour suivre les topics du forum plus facilement.",
    "author": "RÃ©my Lavergne",
    "icons": {
        "16": "images/forum16.png",
        "32": "images/forum32.png",
        "128": "images/forum128.png"
    },
    "browser_action": {
        "default_icon": "images/forum16.png",
        "default_popup": "popup.html"
    },
    "options_page": "games-list.html",
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts":  ["eventPage.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://www.jeuxvideo.com/forums/*"],
            "js": ["content.js"],
            "css": ["css/content.css"]
        }
    ]
}